<Ui xmlns="http://www.blizzard.com/wow/ui/" 
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://www.blizzard.com/wow/ui/..\..\..\FrameXML\UI.xsd">

	<Script file="aurae.lua"/>
	<Script file="globals.lua"/>
	<Script file="Interface\AddOns\aurae\data\ccs.lua"/>
	<Script file="Interface\AddOns\aurae\data\debuffs.lua"/>
	<Script file="Interface\AddOns\aurae\data\buffs.lua"/>
	<Script file="localization.lua"/>

	<Frame name="auraeMovableTemplate" virtual="true">
		<Size>
			<AbsDimension x="170" y="100" />
		</Size>
		<Scripts>
			<OnLoad>
				this:EnableMouse(0)
			</OnLoad>
 			<OnMouseDown>
 				if arg1 == "LeftButton" and aurae.STATUS == 2 then
 					this:StartMoving()
 				end
 			</OnMouseDown>
 			<OnMouseUp>
 				if arg1 == "LeftButton" then
 					this:StopMovingOrSizing()
 				end
 			</OnMouseUp>
		</Scripts>
	</Frame>

	<Frame name="auraeCC" movable="true" inherits="auraeMovableTemplate" parent="UIParent">
		<Anchors>
			<Anchor point="CENTER">
				<Offset>
					<AbsDimension x="0" y="80" />
				</Offset>
			</Anchor>
		</Anchors>
	</Frame>

	<Frame name="auraeDebuff" movable="true" inherits="auraeMovableTemplate" parent="UIParent">
		<Anchors>
			<Anchor point="CENTER">
				<Offset>
					<AbsDimension x="-235" y="80" />
				</Offset>
			</Anchor>
		</Anchors>
	</Frame>

	<Frame name="auraeBuff" movable="true" inherits="auraeMovableTemplate" parent="UIParent">
		<Anchors>
			<Anchor point="CENTER">
				<Offset>
					<AbsDimension x="235" y="80" />
				</Offset>
			</Anchor>
		</Anchors>
	</Frame>

	<Frame>
		<Scripts>
			<OnLoad>
				aurae_OnLoad()
			</OnLoad>
			<OnUpdate>
				aurae_OnUpdate()
			</OnUpdate>
			<OnEvent>
				aurae_OnEvent(event)
			</OnEvent>
		</Scripts>
	</Frame>

<!-- original SW hack for initialization due to lack of working GetTalentInfo() in the VARIABLE_LOADED, PLAYER_LOGIN, PLAYER_ENTERING_WORLD events -->
	<Frame name="aurae_Variable_Frame" hidden="false">
		<Scripts>
			<OnUpdate>
				aurae_LoadVariablesOnUpdate(arg1)
			</OnUpdate>
		</Scripts>
	</Frame>
</Ui>